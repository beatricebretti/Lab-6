<h1>Create New Post</h1>

<%= form_for(@post, class: 'form-horizontal') do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: 'control-label' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :published, class: 'control-label' %>
    <%= f.check_box :published, class: 'form-check-input' %>
    <%= f.label :published, "Published?", class: 'form-check-label' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Post", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Posts', posts_path, class: 'btn btn-secondary' %>