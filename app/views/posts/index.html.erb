<h1>All Posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.published? ? 'Published' : 'Unpublished' %></td>
        <td><%= link_to 'View', post_path(post), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Home', root_path, class: "btn btn-secondary" %>
