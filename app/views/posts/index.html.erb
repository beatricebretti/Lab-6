<h1>All Posts</h1>

<% if user_signed_in? %>
          <%= link_to 'Create New Post', new_post_path, class: "btn btn-primary mb-3" %>
 <% else %>
          <p>You need to <%= link_to 'Sign In', new_user_session_path %> to create a post.</p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% if @posts.present? %> <!-- Check if @posts is set -->
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.published? ? 'Published' : 'Unpublished' %></td>
          <td><%= link_to 'View', post_path(post), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">No posts available.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Home', root_path, class: "btn btn-secondary" %>
