<%= form_with(model: [post, Comment.new]) do |form| %>
    <div class="form-group">
      <%= form.label :content, "Add a Comment" %>
      <%= form.text_area :content, class: "form-control", rows: 3 %>
    </div>
  
    <div class="form-group">
      <%= form.submit "Add Comment", class: "btn btn-primary" %>
    </div>
  <% end %>